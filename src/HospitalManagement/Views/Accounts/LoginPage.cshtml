@model LoginViewModel
@{
    ViewData["Title"] = "Log In";

}

<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="col-sm-5">
        </div>
    
<div class="loginPage col-sm-5" >
<form asp-controller="Accounts" asp-action="Home" method="post"  autocomplete="on" role="form">
  
    <div style="padding-left:5%;">
    <h3>Sign In using your email account.</h3>
   </div>

     <br />
  

    <div class="innerdiv">


    <div class="form-group">
    <label asp-for="Email" class="text">Email:</label>
    <input asp-for="Email" id="Email" type="email" class="form-control" placeholder="Enter email"   />
        <span asp-validation-for="Email"  id="emailCheckSpan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="text">Password:</label>
        <input asp-for="Password" id="LoginPassword" type="password" class="form-control" placeholder="Enter password"  />
        <span asp-validation-for="Password" id="loginCheckSpan" class="text-danger"></span>
</div>

 
        <input type="submit" class="btn btn-success btn-lg text col-sm-4"  value="Log in"  />
        
        

        <br />
        <br />
    <br />
   <div  class="text" ><strong> No account yet?</strong> </div>
   <br />

        <input type="button"  onclick="location.href='@Url.Action("SignUpPage", "Accounts")'" class="btn btn-primary btn-lg text col-md-10 " value="Create an account" />
   
        </div>


</form>





</div>

    <div class="col-sm-2">
    </div>


</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}