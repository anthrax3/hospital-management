@model IEnumerable<HospitalManagement.Models.Query>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DoctorId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DoctorId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Question)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.QueryId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.QueryId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.QueryId">Delete</a>
        </td>
    </tr>
}
</table>
