@using System.Security.Claims

@if (User.IsSignedIn())
{
    <form asp-controller="Accounts" asp-action="Signout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-controller="Accounts" asp-action="ProfileViewPage">Profile</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link text">Sign out</button>

            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Accounts" asp-action="SignUpPage">Register</a></li>
        <li><a asp-controller="Accounts" asp-action="LoginPage">Log in</a></li>
    </ul>
}
